@model DProject.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Вхід";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="login-register_wrapper">
    <form class="form-signin" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>

        <div class="text-center mb-4">
            <h1 class="h3 mb-3 font-weight-normal">Авторизація</h1>
        </div>

        <div class="form-label-group">
            <label asp-for="Email" class="sr-only">Введіть Email</label>
            <input asp-for="Email" type="text" id="inputEmail" class="form-control" placeholder="Email" required="" autofocus="">
            <span asp-validation-for="Email" />
        </div>

        <div class="form-label-group">
            <label asp-for="Password" class="sr-only">Введіть пароль</label>
            <input asp-for="Password" type="password" id="inputPassword" class="form-control" placeholder="Пароль" required="">
            <span asp-validation-for="Password" />
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Увійти</button>

        <a class="text-center register_link" asp-action="Register" asp-controller="Account">Реєстрація</a>
    </form>
</div>
